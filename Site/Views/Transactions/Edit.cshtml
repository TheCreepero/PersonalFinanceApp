@model Site.Models.ViewModels.TransactionViewModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="TransactionDate" />
            <input type="hidden" asp-for="TransactionId" />
            <div class="form-group">
                <label asp-for="TransactionName" class="control-label"></label>
                <input asp-for="TransactionName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="TransactionAmount" class="control-label"></label>
                <input asp-for="TransactionAmount" type="text" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="SelectedAccount" class="control-label"></label>
                <select asp-for="SelectedAccount" class="form-control" asp-items="@(new SelectList(ViewData["Accounts"] as List<Account>, "AccountId", "AccountName"))"></select>
                <span asp-validation-for="SelectedAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedType" class="control-label"></label>
                <select asp-for="SelectedType" class="form-control" asp-items="@(new SelectList(ViewData["TransactionTypes"] as List<TransactionTypes>, "Id", "Name"))"></select>
                <span asp-validation-for="SelectedType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
