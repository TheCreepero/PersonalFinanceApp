@model Site.Models.ViewModels.CreateTransactionViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TransactionName" class="control-label"></label>
                <input asp-for="TransactionName" class="form-control" />
                <span asp-validation-for="TransactionName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TransactionAmount" class="control-label"></label>
                <input asp-for="TransactionAmount" class="form-control" />
                <span asp-validation-for="TransactionAmount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedAccount" class="control-label"></label>
                <select asp-for="SelectedAccount" class="form-control" asp-items="@(new SelectList(Model.Accounts, "AccountId", "AccountName"))"></select>
                <span asp-validation-for="SelectedAccount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedType" class="control-label"></label>
                <select asp-for="SelectedType" class="form-control" asp-items="@(new SelectList(Model.TransactionTypes, "Id", "Name"))"></select>
                <span asp-validation-for="SelectedType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
