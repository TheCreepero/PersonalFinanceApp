            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StartBalance" class="control-label"></label>
                <input asp-for="StartBalance" class="form-control" />
                <span asp-validation-for="StartBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndBalance" class="control-label"></label>
                <input asp-for="EndBalance" class="form-control" />
                <span asp-validation-for="EndBalance" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
